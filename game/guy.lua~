
require "lux.object"

guy = lux.object.new{
  speed = 1,
  runspeed = 2,
  jumppower = 5,
  grav = 10,
  maxvertspeed = 5,
  
  x = 0,
  y = 0,
  curxspd = 0,
  curyspd = 0
}

function guy:update(dt)
  local dir = self:dir()
  if self:isrunning() then
    curxspd = dir * runspeed
  else	
    curxspd = dir * speed
  end	
  
end